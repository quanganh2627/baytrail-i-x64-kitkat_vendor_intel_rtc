<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
            android:id="@+id/localView"
            android:layout_width="400dip"
            android:layout_height="350dip"
            android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/remoteView"
        android:layout_width="match_parent"
        android:layout_height="730dip"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/operationsView"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#A9A9A9" >

        <ImageButton
            android:id="@+id/hangupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:src="@drawable/hangup"
            android:onClick="onHangup" />

        <ImageButton
            android:id="@+id/videoSetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/video_on"
            android:onClick="onSetVideo" />

        <ImageButton
            android:id="@+id/voiceSetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/voice_on"
            android:onClick="onSetVoice" />

        <ImageButton
            android:id="@+id/switchCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/switch_cam"
            android:onClick="onSwitchCamera" />

    </LinearLayout>

</LinearLayout>
